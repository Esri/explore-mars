{
  "name": "explore-mars",
  "version": "1.0.0",
  "description": "Interactively discover the red planet using the ArcGIS API for JavaScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/arnofiva/arcgis-core-template"
  },
  "author": "Gunnar Ingi Stefansson",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "concurrently --group --prefix none \"npm:lint:*\"",
    "lint:typecheck": "tsc --noEmit",
    "lint:eslint": "npx eslint --ext .ts,.tsx,.jsdoc src/",
    "lint:prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss}'",
    "lint:stylelint": "stylelint --cache --fix 'src/**/*.{css,scss}'"
  },
  "dependencies": {
    "@arcgis/core": "^4.27",
    "@esri/calcite-components": "1.4.2",
    "@zip.js/zip.js": "^2.7.29",
    "classnames": "^2.3.2",
    "gl-matrix": "^3.4.3",
    "maquette-css-transitions": "^1.1.1",
    "ts-pattern": "^5.0.5",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  },
  "devDependencies": {
    "@types/sortablejs": "^1.15.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "prettier": "^3.0.3",
    "sass": "^1.63.4",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0"
  }
}
